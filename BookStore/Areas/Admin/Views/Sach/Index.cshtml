@model IEnumerable<BookStore.Models.Sach>

@{
    ViewData["Title"] = "Index";
}

<h1 style="padding-top: 30px; text-align: center;">BẢNG SÁCH</h1>
<div class="table-responsive">

    <p>
        <a asp-action="Create" class="btn btn-danger" style="font-weight:bold"><i class="fa-plus-square"></i>Thêm mới</a>
    </p>
    <table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr style="text-align:center;background-color:cornflowerblue">
                <th style="width:280px">
                    @Html.DisplayNameFor(model => model.TenSach)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DonGia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SoLuong)
                </th>
                <th>Tinh trang</th>
                <th>
                    @Html.DisplayNameFor(model => model.HinhAnhBia)
                </th>
                
                <th>
                    @Html.DisplayNameFor(model => model.LoaiSach)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NhaXuatBan)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenSach)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonGia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoLuong)
                    </td>
                    <td>
                        @if (item.SoLuong.Value > 0)
                        {
                            <div class="d-flex align-items-center">
                                <div class="badge badge-success badge-dot m-r-10"></div>
                                <div style="color:green; font-family:'Agency FB'; font-size:20px;font-weight:bold">Còn hàng</div>
                            </div> }
                        else
                        {
                            <div class="d-flex align-items-center">
                                <div class="badge badge-danger badge-dot m-r-10"></div>
                                <div style="color:red; font-family:'Agency FB'; font-size:20px;font-weight:bold">Hết hàng</div>
                            </div>}

                    </td>
                    <td>
                        <img src="~/Images/@Html.DisplayFor(modelItem=> item.HinhAnhBia)" width="60" height="60" />
                    </td>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.LoaiSach.TenLoai)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NhaXuatBan.TenNhaXuatBan)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id"style="color: #8809e8 "><i class="fa fa-edit"></i></a> |
                        <a asp-action="Details" asp-route-id="@item.Id"style="color: #8809e8 "><i class="fa fa-eye"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.Id"style="color: #8809e8 "><i class="fa fa-trash-o"></i></a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
            <tr style="text-align:center;background-color:cornflowerblue">
                <th>
                    @Html.DisplayNameFor(model => model.TenSach)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DonGia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SoLuong)
                </th>
                <th>Tinh trang</th>
                <th>
                    @Html.DisplayNameFor(model => model.HinhAnhBia)
                </th>
                
                <th>
                    @Html.DisplayNameFor(model => model.LoaiSach)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NhaXuatBan)
                </th>
                <th></th>
            </tr>
        </tfoot>
    </table>
</div>