@model BookStore.Models.Sach

@{
    ViewData["Title"] = "Edit";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NhaXuatBanId" class="control-lable"></label>
                <select asp-for="NhaXuatBanId" class="form-control border" asp-items="ViewBag.NhaXuatBanId"></select>
                <span asp-validation-for="NhaXuatBanId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoaiSachId" class="control-lable"></label>
                <select asp-for="LoaiSachId" class="form-control border" asp-items="ViewBag.LoaiSachId"></select>
                <span asp-validation-for="LoaiSachId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenSach" class="control-lable"></label>
                <input asp-for="TenSach" class="form-control border" />
                <span asp-validation-for="TenSach" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DonGia" class="control-lable"></label>
                <input asp-for="DonGia" class="form-control border" />
                <span asp-validation-for="DonGia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-lable"></label>
                <input asp-for="SoLuong" class="form-control border" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HinhAnhBia" class="control-lable"></label>
                <input type="file" name="file" accept="image/jpg , image/jpeg, image/png"/>
                <span asp-validation-for="HinhAnhBia" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MoTa" class="control-lable"></label>
                <textarea asp-for="MoTa" class="form-control border"></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" /><a asp-action="Index">Quay về danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
