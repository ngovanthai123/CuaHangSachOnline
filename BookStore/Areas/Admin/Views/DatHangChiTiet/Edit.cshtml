@model BookStore.Models.DatHangChiTiet

@{
    ViewData["Title"] = "Edit";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DatHangId" class="control-label"></label>
                <select asp-for="DatHangId" class="form-control" asp-items="ViewBag.DatHangId"></select>
                <span asp-validation-for="DatHangId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SachId" class="control-label"></label>
                <select asp-for="SachId" class="form-control" asp-items="ViewBag.SachId"></select>
                <span asp-validation-for="SachId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label"></label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DonGia" class="control-label"></label>
                <input asp-for="DonGia" class="form-control" />
                <span asp-validation-for="DonGia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" /><a asp-action="Index">Quay về danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
