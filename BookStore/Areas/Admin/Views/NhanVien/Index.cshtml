@model IEnumerable<BookStore.Models.NhanVien>

@{
    ViewData["Title"] = "Index";
}

<h1 style="padding-top: 30px; text-align: center;">BẢNG NHÂN VIÊN</h1>
<div class="table-responsive">

    <p>
        <a asp-action="Create" class="btn btn-danger" style="font-weight:bold"><i class="fa-plus-square"></i>Thêm mới</a>
    </p>
    <table id="example1" class="table table-bordered table-striped">
        <thead>
            <tr style="text-align:center;background-color:cornflowerblue">
                <th>
                    @Html.DisplayNameFor(model => model.HoVaTen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DienThoai)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DiaChi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HinhAnh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TenDangNhap)
                </th>
               
                <th>
                    @Html.DisplayNameFor(model => model.Quyen)
                </th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HoVaTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DienThoai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <img src="~/@item.HinhAnh" width="60" class="img-thumbnail text-center" />

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenDangNhap)
                </td>
               
                <td>
                    @if (item.Quyen == 1)
                    {
                        <span class="badge badge-info">Quản lý</span>
                    }
                    else
                    {
                        <span class="badge badge-warning">Nhân viên</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"style="color: #8809e8 "><i class="fa fa-edit"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.Id"style="color: #8809e8 "><i class="fa fa-eye"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"style="color: #8809e8 "><i class="fa fa-trash-o"></i></a>
                </td>
            </tr>
            }
        </tbody>
        <tfoot>
            <tr style="text-align:center;background-color:cornflowerblue">
                <th>
                    @Html.DisplayNameFor(model => model.HoVaTen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DienThoai)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DiaChi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HinhAnh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TenDangNhap)
                </th>
                
                <th>
                    @Html.DisplayNameFor(model => model.Quyen)
                </th>
                <th>Thao tác</th>
            </tr>
        </tfoot>
    </table>
</div>