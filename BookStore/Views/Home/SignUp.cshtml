@model BookStore.Models.KhachHang

@{
    ViewBag.Title = "Đăng ký tài khoản khách hàng";
    Layout = null;

}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Đăng ký khách hàng</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="/out/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/out/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/out/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/out/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/out/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/out/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/out/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/out/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/out/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/out/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/out/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/out/css/main.css">
    <!--===============================================================================================-->
</head>
<body style="background-color: #999999;">

    <div class="limiter">
        <div class="container-login100">
            <div class="login100-more" style="background-image: url('/out/images/bg1.jpg'); "></div>

            <div class="wrap-login100 p-l-50 p-r-50 p-t-72 p-b-50">
                <span class="login100-form-title p-b-59" style="font-family: cursive; font-style: italic; font-size: 38px;">
                    ĐĂNG KÝ TÀI KHOẢN
                </span>
                @using (Html.BeginForm())
                {
@*                   <span style="color: red; font-family: cursive;padding-bottom:20px">@ViewData.ModelState["SignUpError"].Errors[0].ErrorMessage</span>
*@
                    @Html.AntiForgeryToken()
                    <div class="wrap-input100 validate-input" data-validate="Name is required">
                        <span class="label-input100">Họ và tên</span>
                        <input class="input100" type="text" name="HoVaTen" placeholder="Tên...">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Valid email is required">
                        <span class="label-input100">Điện thoại</span>
                        <input class="input100" type="text" name="DienThoai" placeholder="Điện thoại...">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Address is required">
                        <span class="label-input100">Địa chỉ</span>
                        <input class="input100" type="text" name="DiaChi" placeholder="Username...">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Email is required">
                        <span class="label-input100">Email</span>
                        <input class="input100" type="text" name="Email" placeholder="Email...">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Repeat UerName is required">
                        <span class="label-input100">Tên đăng nhập</span>
                        <input class="input100" type="text" name="TenDangNhap" placeholder="Username...">
                        <span class="focus-input100"></span>
                        @if (ViewBag.error != null)
                        {
                            <span style="color: red; font-family: cursive; padding-top:0px">@ViewBag.error</span>
                        }
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Repeat Password is required">
                        <span class="label-input100">Mật khẩu</span>
                        <input class="input100" type="text" name="MatKhau" placeholder="Password...">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Repeat Password is required">
                        <span class="label-input100">Xác nhận mật khẩu</span>
                        <input class="input100" type="text" name="XacNhanMatKhau" placeholder="Password...">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="flex-m w-full p-b-33">
                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                            <label class="label-checkbox100" for="ckb1">
                                <span class="txt1">
                                    I agree to the
                                    <a href="#" class="txt2 hov1">
                                        Terms of User
                                    </a>
                                </span>
                            </label>
                        </div>


                    </div>

                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn">
                                Đăng ký
                            </button>
                        </div>

                        <a asp-controller="Home" asp-action="Login" class="dis-block txt3 hov1 p-r-30 p-t-10 p-b-10 p-l-30">
                            Đăng nhập ngay
                            <i class="fa fa-long-arrow-right m-l-5"></i>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!--===============================================================================================-->
    <script src="~/out/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/out/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/out/vendor/bootstrap/js/popper.js"></script>
    <script src="~/out/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/out/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/out/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/out/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/out/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/out/js/main.js"></script>

</body>
</html>